<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GarbageCamera">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/reco_alarm"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            app:srcCompat="@drawable/alarm" />

        <ImageView
            android:id="@+id/reco_icon"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="70.5dp"
            app:srcCompat="@drawable/reco" />

        <ImageView
            android:id="@+id/reco_plant"
            android:layout_width="25dp"
            android:layout_height="41dp"
            app:srcCompat="@drawable/plant" />

        <ImageView
            android:id="@+id/reco_setting"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="70.5dp"
            app:srcCompat="@drawable/setting" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_add_photo" />

        <ProgressBar
            android:id="@+id/progress_View"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/upload_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="15dp"
            android:text="CHECK RECYCLE"
            android:textSize="20dp" />

    </LinearLayout>


</LinearLayout>