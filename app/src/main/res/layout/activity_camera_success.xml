<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".CameraSuccess">

    <include layout="@layout/title_bar"
        android:id="@+id/title_bar"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:fontFamily="monospace"
        android:text="2p 획득!"
        android:textAlignment="center"
        android:textColor="#4B6C11"
        android:textSize="47sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/title_bar" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.648"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@drawable/coin2" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp">

        <View
            android:id="@+id/ellipse_26"
            android:layout_width="319dp"
            android:layout_height="100dp"
            android:background="@drawable/ellipse_26"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="덕분에 거리가 깨끗해졌어요!"
            android:textAlignment="center"
            android:textColor="#444444"
            android:textSize="16sp"
            android:textStyle="bold" />

    </FrameLayout>


    <Button
        android:id="@+id/backHome"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="#E6E6E6"
        android:text="홈으로"
        android:textColor="#444444"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/ellipse_26" />




</LinearLayout>